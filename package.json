{
  "name": "git-challenge-template",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "concurrently --prefix-colors auto 'yarn:dev:frontend' 'yarn:dev:backend' 'yarn:dev:storybook'",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:backend": "yarn workspace backend dev",
    "build:frontend": "yarn workspace frontend build",
    "start:frontend": "yarn workspace frontend start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "yarn run dev:storybook",
    "dev:storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "test": "vitest",
    "test:frontend": "vitest --project frontend --project storybook",
    "test:backend": "vitest --project backend",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-designs": "^11.1.1",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/nextjs-vite": "^10.1.11",
    "@types/node": "25.0.9",
    "@types/react": "^19.2.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^10.1.11",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "storybook": "^10.1.11",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "packageManager": "yarn@4.12.0"
}